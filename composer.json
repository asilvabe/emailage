{
  "name": "placetopay/emailage",
  "description": "SDK to connect with Emailage service",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Diego Calle",
      "email": "dnetix@gmail.com"
    }
  ],
  "archive": {
    "exclude": [
      ".git",
      ".gitignore"
    ]
  },
  "autoload": {
    "psr-4": {
      "PlacetoPay\\Emailage\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^7.5",
    "psr/log": "^1|^2|^3"
  },
  "require-dev": {
    "symfony/var-dumper": "^4.1",
    "friendsofphp/php-cs-fixer": "^3.21",
    "phpunit/phpunit": "^9.5|^10.0"
  },
  "scripts": {
      "php-cs": "phpcs --standard=PSR2 --ignore=tests/coverage app/ tests/",
      "php-cs-fixer": "vendor/bin/php-cs-fixer fix"
    }
}
