{
  "name": "placetopay/emailage",
  "description": "SDK to connect with Emailage service",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Diego Calle",
      "email": "dnetix@gmail.com"
    }
  ],
  "archive": {
    "exclude": [
      ".git",
      ".gitignore"
    ]
  },
  "autoload": {
    "psr-4": {
      "PlacetoPay\\Emailage\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=7.3",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^6.3|^7.0.1",
    "psr/log": "^1.1"
  },
  "require-dev": {
    "symfony/var-dumper": "^4.1",
    "friendsofphp/php-cs-fixer": "^2.16",
    "phpunit/phpunit": "^8.5"
  },
  "scripts": {
    "php-cs-fixer": "vendor/bin/php-cs-fixer fix --config=.php_cs"
  }
}
